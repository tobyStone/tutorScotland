{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/parents",
      "destination": "/public/parents.html"
    },
    {
      "source": "/tutorszone",
      "destination": "/public/tutorszone.html"
    },
    {
      "source": "/admin",
      "destination": "/public/admin.html"
    },
    {
      "source": "/login",
      "destination": "/public/login.html"
    },
    {
      "source": "/tutors/search",
      "destination": "/api/tutors.js"
    },
    {
      "source": "/about",
      "destination": "/about-us.html"
    },
    {
      "source": "/api/login",
      "destination": "/api/login.js"
    },
    {
      "source": "/api/parents",
      "destination": "/api/parents.js"
    },
    {
      "source": "/api/addTutor",
      "destination": "/api/addTutor.js"
    },
    {
      "source": "/api/tutorzone",
      "destination": "/api/tutorzone.js"
    },
    {
      "source": "/blog-writer",
      "destination": "/api/blog-writer.js"
    },
    {
      "source": "/blog",
      "destination": "/api/blog.js"
    },
    {
      "source": "/api/admin",
      "destination": "/api/admin.js"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "@jwt_secret",
    "BLOB_READ_WRITE_TOKEN": "@blob_read_write_token"
  }
}
