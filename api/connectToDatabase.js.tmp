// connectToDatabase.js
const mongoose = require('mongoose');

let cachedDb = null;

module.exports = async function() {
    if (cachedDb) {
        return cachedDb;
    }

    const connection = await mongoose.connect(process.env.MONGODB_URI, {
        useNewUrlParser: true,
        useUnifiedTopology: true,
    });

    cachedDb = connection;
    return cachedDb;
};
